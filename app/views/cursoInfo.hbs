<div class="container mt-5">
   <h3>{{titulo}}</h3>
   <form action="/curso/info/consulta" method="post">
      <div class="row mt-3 mb-3">
         <div class="col-9">
            <select class="browser-default custom-select" name="cursos" id="cursos" required=''>
               <option value=""> Seleccionar curso </option>
               {{#each cursos}}
                  <option value="{{this.identificador}}">{{this.nombre}}</option>
               {{/each}}
            </select>
         </div>
         <div class="col-3">
            <button type="submit" class="btn btn-primary">Consultar</button>
         </div>
      </div>
   </form>
   
   <h4>Profesor: {{profesor.nombre}} {{profesor.apellido}}</h4>

   <h5>Alumnos en el curso {{cursoNom}}</h5>
   <table class="table table-striped">
      <thead>
         <tr>
            <th>Nombres</th>
            <th>Apellidos</th>
         </tr>
      </thead>
      {{#each alumnos}}
      <tr>
         <td>{{this.nombre}}</td>
         <td>{{this.apellido}}</td>
      </tr>
      {{/each}}
   </table>
   <a class="btn btn-primary" href="/"> Volver </a>
</div>
<script>
   $(document).ready(() => {
      $('select option[value="{{cursos.identificador}}"]').attr("selected", true)
   })
</script>