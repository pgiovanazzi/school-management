<div class="container mt-5">
   <h4>{{titulo}}</h4>
   <br>
   <form action="/alumnos/persona/operar" method="post">
      <input type="hidden" name="id" value="{{persona.identificador}}">
      <div class="form-group">
         <label for="Nombres">Nombres:</label>
         <input type="text" class="form-control" id="nombres" name="nombres" value="{{persona.nombre}}" required>
      </div>
      <div class="form-group">
         <label for="apellidos">Apellidos:</label>
         <input type="text" class="form-control" id="apellidos" name="apellidos" value="{{persona.apellido}}" required>
      </div>
      <div class="form-group">
         <label for="tipodoc">Tipo de documento:</label>
         <input type="text" class="form-control" id="tipodoc" name="tipodoc" value="{{persona.tipodoc}}" required>
      </div>
      <div class="form-group">
         <label for="documento">Documento:</label>
         <input type="number" class="form-control" id="documento" name="documento" value="{{persona.documento}}" required>
      </div>
      <div class="form-group">
         <label for="fechanac">Fecha de nacimiento:</label>
         <input type="date" class="form-control" id="fechanac" name="fechanac" value="{{dateFormat persona.fechanac "YYYY-MM-DD"}}" required>
      </div>
      <div class="form-group">
         <label for="direccion">Direcci√≥n:</label>
         <input type="text" class="form-control" id="direccion" name="direccion" value="{{persona.direccion}}" required>
      </div>
      <div class="form-group">
         <label for="legajo">Legajo:</label>
         <input type="number" class="form-control" id="legajo" name="legajo"
            value="{{persona.legajo}}">
      </div>
      <div class="form-group">
         <label for="carrera" >Carrera:</label>
         <select class="browser-default custom-select" name="carrera" id="carrera" required>
            <option value=""> Seleccionar carrera </option>
            {{#each carreras}}
               <option value="{{this.identificador}}">{{this.nombre}}</option>
            {{/each}}
         </select>
      </div>
      <button type="submit" class="btn btn-primary">Aceptar</button>
      <a href="/" class="btn btn-danger">Cancelar</a>
   </form>
</div>
<script>
   $(document).ready(() => {
      $('select option[value="{{persona.carrera}}"]').attr("selected", true)
   })
</script>